{
  "name": "philosophy",
  "version": "1.0.0",
  "workspaces": [
    "web",
    "server"
  ],
  "private": true,
  "main": "index.js",
  "author": "Thang <phidinhthang@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "lint": "eslint server/src web/src",
    "prepare": "husky",
    "install:server": "yarn workspace server install",
    "build:server": "yarn workspace server build",
    "start:server": "yarn workspace server start",
    "run:server": "npm run install:server && npm run build:server && npm run start:server",
    "heroku-prebuild": "heroku config:set NPM_CONFIG_PRODUCTION=false",
    "heroku-postbuild": "heroku config:set NPM_CONFIG_PRODUCTION=true"
  },
  "lint-staged": {
    "*.aa": [
      "eslint $(git diff --name-only HEAD | xargs)",
      "git add ."
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
