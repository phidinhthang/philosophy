{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "typeRoots": ["./node_modules/@types"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
    // "baseUrl": "src"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/lib/apolloClient.ts"
  ],
  "exclude": ["node_modules", "./src/generated/graphql.tsx"]
}
